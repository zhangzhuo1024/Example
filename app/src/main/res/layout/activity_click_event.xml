<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clickevent.ClickEventActivity">


    <com.example.zz.example.clickevent.MyRelativeLayout
        android:id="@+id/MyRelativeLayout"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center">

        <com.example.zz.example.clickevent.MyImageView
            android:id="@+id/MyImageView"
            android:background="@color/colorAccent"
            android:layout_width="200dp"
            android:layout_height="100dp" />
    </com.example.zz.example.clickevent.MyRelativeLayout>

    <Button
        android:id="@+id/button_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="button click"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageview_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_launcher_background"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@id/button_click" />

    <ImageView
        android:id="@+id/imageview_click2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_launcher_background"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@id/button_click" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="350dp">

    </android.support.v4.view.ViewPager>


</RelativeLayout>