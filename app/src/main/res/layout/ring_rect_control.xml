<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.example.customcontrollib.IconView
        android:id="@+id/start_icon_view"
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:background="@color/background_color"
        app:cycle_color="@color/cycle_color"
        app:cycle_troke="20dp"
        app:cycle_width="180dp"
        app:move_distance="60dp"
        app:red_point_color="@color/red_point_color"
        app:red_point_width="86.7dp"
        app:square_radius="16.6dp"
        app:square_width="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:padding="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rect_to_ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方变圆" />

        <Button
            android:id="@+id/ring_to_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆变方" />

    </LinearLayout>

    <Button
        android:id="@+id/add_view"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addview 添加悬浮窗" />


</RelativeLayout>